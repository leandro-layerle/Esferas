@{
    ViewData["Title"] = "Dashboard de Resultados";
    var encuestaId = ViewBag.EncuestaId;
}

<h2 class="mb-4">Dashboard de Resultados</h2>

<div class="d-flex flex-wrap gap-4">
    <!-- Gráfico -->
    <div style="flex: 1 1 600px; max-width: 700px;">
        <div id="chart" style="width: 100%; height: 600px;"></div>
    </div>

    <!-- Panel lateral -->
    <div style="flex: 1 1 300px; max-width: 400px;">
        <div class="card shadow-sm p-3">
            <h5 class="card-title">Detalles de Categoría</h5>
            <p class="text-muted">Selecciona una categoría en el gráfico para ver preguntas asociadas.</p>

            <div id="detalle-categoria" class="mt-3">
                <p><strong>Nombre:</strong> <span id="cat-nombre">–</span></p>
                <p><strong>Promedio:</strong> <span id="cat-promedio">–</span></p>
                <p><strong>Color:</strong> <span id="cat-color">–</span></p>
            </div>

            <hr />

            <h6 class="mt-3">Preguntas asociadas</h6>
            <ul id="cat-preguntas" class="list-group small"></ul>
        </div>
    </div>
</div>

<script src="https://d3js.org/d3.v7.min.js"></script>

<script>
    const encuestaId = @encuestaId;

    fetch(`/api/resultados/${encuestaId}`)
        .then(res => res.json())
        .then(data => {
            drawSunburst(data);
        });
    function drawSunburst(data) {
        const width = 600;
        const radius = width / 2;

        const root = partition(data);

        const svg = d3.select("#chart")
            .append("svg")
            .attr("preserveAspectRatio", "xMidYMid meet")
            .attr("viewBox", `0 0 ${width} ${width}`)
            .classed("svg-content", true)
            .style("width", "100%")
            .style("height", "auto")
            .style("max-height", "600px")
            .style("display", "block")
            .style("margin", "0 auto");

        const g = svg.append("g")
            .attr("transform", `translate(${width / 2},${width / 2})`);

        const arc = d3.arc()
            .startAngle(d => d.x0)
            .endAngle(d => d.x1)
            .innerRadius(d => d.y0)
            .outerRadius(d => d.y1);

        const path = g.append("g")
            .selectAll("path")
            .data(root.descendants().slice(1))
            .join("path")
            .attr("fill", d => d.data.color ?? "#ccc")
            .attr("d", arc)
            .on("click", clicked);

        path.append("title")
            .text(d => `${d.ancestors().map(d => d.data.name).reverse().join(" → ")}\nPromedio: ${d.data.promedio?.toFixed(2) ?? "N/A"}`);

        const label = g.append("g")
            .attr("pointer-events", "none")
            .attr("text-anchor", "middle")
            .selectAll("text")
            .data(root.descendants().slice(1))
            .join("text")
            .attr("dy", "0.35em")
            .attr("fill-opacity", d => +labelVisible(d))
            .style("font-size", "10px")
            .style("fill", "#000")
            .attr("transform", d => labelTransform(d))
            .text(d => d.data.name);

        function clicked(event, p) {
            root.each(d => d.target = {
                x0: Math.max(0, Math.min(1, (d.x0 - p.x0) / (p.x1 - p.x0))) * 2 * Math.PI,
                x1: Math.max(0, Math.min(1, (d.x1 - p.x0) / (p.x1 - p.x0))) * 2 * Math.PI,
                y0: Math.max(0, d.y0 - p.y0),
                y1: Math.max(0, d.y1 - p.y0)
            });

            const t = g.transition().duration(750);

            path.transition(t)
                .tween("data", d => {
                    const i = d3.interpolate(d.current, d.target);
                    return t => d.current = i(t);
                })
                .attrTween("d", d => () => arc(d.current));

           g.append("circle")
            .datum(root)
            .attr("r", radius / 2.5)
            .attr("fill", "#f8f9fa")
            .attr("stroke", "#ccc")
            .style("cursor", "pointer")
            .on("click", clicked);

            label
                .filter(d => labelVisible(d))
                .transition(t)
                .attr("fill-opacity", d => +labelVisible(d))
                .style("font-size", "10px")
                .style("fill", "#000")
                .attrTween("transform", d => () => labelTransform(d));

            mostrarDetalles(p);
        }

            function labelVisible(d) {
                 return (d.x1 - d.x0) > 0.01 && d.y1 - d.y0 > 10;
        }

        function labelTransform(d) {
            const x = (d.x0 + d.x1) / 2 * 180 / Math.PI;
            const y = (d.y0 + d.y1) / 2;
            return `rotate(${x - 90}) translate(${y},0) rotate(${x < 180 ? 0 : 180})`;
        }

        function partition(data) {
            const root = d3.hierarchy(data)
                .sum(d => d.promedio ?? 0)
                .sort((a, b) => b.value - a.value);
            return d3.partition().size([2 * Math.PI, radius])(root);
        }
    }
</script>
