@model Esferas.Models.DTOs.PersonalDashboardDto
@{
    ViewData["Title"] = "Tus resultados";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container my-4">
    <!-- Encabezado -->
    <div class="row mb-3">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body d-flex flex-wrap align-items-center justify-content-between">
                    <div class="mb-2">
                        <h3 class="fw-bold mb-1">Hola, @Model?.NombrePersona</h3>
                        <div class="text-muted">
                            @Model?.NombreEncuesta · @Model?.Fecha.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                    <div class="text-end">
                        <div class="fst-italic text-secondary">
                            “Este es tu punto de partida. Lo importante no es dónde estás, sino hacia dónde vas.”
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- KPIs -->
    <div class="row g-3 mb-4 align-items-stretch">
        <div class="col-6 col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-muted">Promedio general</div>
                    <div class="display-6 fw-bold text-primary">@Model?.PromedioGeneral.ToString("0.0")</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-muted">Áreas en rojo</div>
                    <div class="display-6 fw-bold text-danger">@Model?.CantRojas</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-muted">Áreas en amarillo</div>
                    <div class="display-6 fw-bold" style="color:#b58900">@Model?.CantAmarillas</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-muted">Áreas en verde</div>
                    <div class="display-6 fw-bold text-success">@Model?.CantVerdes</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Radar + Semáforo textual -->
    <div class="row g-3 mb-4">
        <!-- Radar -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100 d-flex flex-column">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="card-title m-0">Mapa de tus esferas</h6>
                        <span class="badge text-bg-light">1 a 5</span>
                    </div>
                    <div class="chart-container flex-grow-1" style="position:relative; height: 320px;">
                        <canvas id="radarChart"></canvas>
                    </div>
                    <div id="sinDatosRadar" class="text-muted text-center mt-3" style="display:none;">
                        Sin datos para mostrar.
                    </div>
                </div>
            </div>
        </div>

        <!-- Semáforo textual -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title">Tu semáforo por áreas</h6>

                    <div class="mb-3">
                        <div class="fw-semibold text-danger mb-1"><i class="bi bi-circle-fill me-1"></i> Áreas en rojo</div>
                        @if (Model?.EsferasRojas?.Any() == true)
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var e in Model.EsferasRojas)
                                {
                                    <li class="mb-1">🟥 <strong>@e.Esfera</strong> — @e.Promedio.ToString("0.0") @if(!string.IsNullOrWhiteSpace(e.BreveDescripcion)){
                                    <span class="text-muted">· @e.BreveDescripcion</span>
                                }
                                    </li>
                            }
                        </ul>
                        }
                        else
                        {
                            <div class="text-muted">No se detectaron áreas en rojo.</div>
                        }
                    </div>

                    <div class="mb-3">
                        <div class="fw-semibold" style="color:#b58900"><i class="bi bi-circle-fill me-1"></i> Áreas en amarillo</div>
                        @if (Model?.EsferasAmarillas?.Any() == true)
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var e in Model.EsferasAmarillas)
                                {
                                    <li class="mb-1">🟨 <strong>@e.Esfera</strong> — @e.Promedio.ToString("0.0") @if(!string.IsNullOrWhiteSpace(e.BreveDescripcion)){
                                    <span class="text-muted">· @e.BreveDescripcion</span>
                                }
                                    </li>
                            }
                        </ul>
                        }
                        else
                        {
                            <div class="text-muted">No se detectaron áreas en amarillo.</div>
                        }
                    </div>

                    <div class="mb-2">
                        <div class="fw-semibold text-success"><i class="bi bi-circle-fill me-1"></i> Áreas en verde</div>
                        @if (Model?.EsferasVerdes?.Any() == true)
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var e in Model.EsferasVerdes)
                                {
                                    <li class="mb-1">🟩 <strong>@e.Esfera</strong> — @e.Promedio.ToString("0.0")</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="text-muted">No se detectaron áreas en verde.</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Áreas a desarrollar (tarjetas con recomendaciones) -->
    <div class="row g-3 mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <h5 class="m-0">Tus áreas a desarrollar</h5>
                <span class="text-muted small">Guía de próximos pasos</span>
            </div>
        </div>

        @if (Model?.EsferasRojas?.Any() == true)
        {
            @foreach (var er in Model.EsferasRojas)
            {
                var recs = Model.Recomendaciones.Where(r => r.Esfera == er.Esfera).ToList();
                <div class="col-md-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <div class="fw-bold">🟥 @er.Esfera</div>
                                <span class="badge text-bg-danger">@er.Promedio.ToString("0.0")</span>
                            </div>
                            @if (!string.IsNullOrWhiteSpace(er.BreveDescripcion))
                            {
                                <div class="text-muted mb-2">@er.BreveDescripcion</div>
                            }

                            @if (recs.Any())
                            {
                                <div class="mb-1 fw-semibold">Recomendaciones</div>
                                <ul class="mb-0">
                                    @foreach (var r in recs)
                                    {
                                        <li class="mb-1">
                                            <i class="bi @(r.Tipo == "Curso" ? "bi-mortarboard" : r.Tipo == "Lectura" ? "bi-book" : "bi-lightning-charge") me-1"></i>
                                            <strong>@r.Tipo:</strong>
                                            @if (!string.IsNullOrWhiteSpace(r.Url))
                                            {
                                                <a href="@r.Url" target="_blank">@r.Titulo</a>
                                            }
                                            else
                                            {

                                                @r.Titulo
                                            }
                                            @if (!string.IsNullOrWhiteSpace(r.Notas))
                                            {
                                                <span class="text-muted">· @r.Notas</span>
                                            }
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="text-muted">Pronto verás recomendaciones personalizadas para esta área.</div>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body text-muted">
                        No se detectaron áreas críticas. ¡Buen trabajo! Mantené el hábito de mejora continua.
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- CTA -->
    <div class="row g-3">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body d-flex flex-wrap align-items-center justify-content-between">
                    <div class="mb-2">
                        <h6 class="m-0">¿Querés mejorar estas áreas con acompañamiento?</h6>
                        <div class="text-muted">Podés iniciar un proceso de coaching o descargar tu informe.</div>
                    </div>
                    <div class="d-flex gap-2">
                        <a class="btn btn-primary"><i class="bi bi-chat-dots me-2"></i>Comenzar con un coach</a>
                        <a class="btn btn-outline-secondary"><i class="bi bi-download me-2"></i>Descargar PDF</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Radar
        (function initRadar(){
            const labels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model?.RadarEsferas?.Select(x => x.Esfera) ?? new List<string>()));
            const values = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model?.RadarEsferas?.Select(x => x.Promedio) ?? new List<double>()));

            const noData = !labels || labels.length === 0;
            const canvas = document.getElementById('radarChart');
            const sinDatos = document.getElementById('sinDatosRadar');

            if (noData) {
                canvas.style.display = 'none';
                sinDatos.style.display = 'block';
                return;
            }

            new Chart(canvas, {
                type: 'radar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Promedio por esfera',
                        data: values,
                        fill: true,
                        backgroundColor: 'rgba(13,110,253,0.15)',
                        borderColor: 'rgba(13,110,253,1)',
                        pointBackgroundColor: 'rgba(13,110,253,1)'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { r: { beginAtZero: true, max: 5 } },
                    plugins: { legend: { position: 'bottom' } }
                }
            });
        })();
    </script>
}
