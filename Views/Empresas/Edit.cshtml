@model Esferas.Models.ViewModels.EmpresaViewModel

@{
    ViewData["Title"] = "Editar Empresa";
}

<h1 class="mb-4">Editar Empresa</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cultura" class="form-label"></label>
        <textarea asp-for="Cultura" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Cultura" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
