@model Esferas.Models.Entities.Encuesta

@{
    ViewData["Title"] = "Eliminar Encuesta";
}

<h1 class="text-danger mb-4">Eliminar Encuesta</h1>

<h5 class="mb-3">¿Estás seguro que querés eliminar esta encuesta?</h5>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Empresa</dt>
            <dd class="col-sm-9">@Model.Empresa?.Nombre</dd>

            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.FechaCreacion.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Model.Estado</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
